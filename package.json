  "author": {
    "name": "Andrew Goodricke",
    "email": "github@andrewgoodricke.com",
    "url": "http://andrewgoodricke.com"
  },
  "dependencies": {
    "cheerio": "^0.20.0",
    "debug": "^2.2.0",
    "handlebars": "^4.0.5",
    "joi": "^8.1.0",
    "jquery": "^2.2.4",
    "js-yaml": "^3.6.1",
    "lodash.assignin": "^4.1.0",
    "lodash.clonedeep": "^4.4.0",
    "lodash.sortby": "^4.5.0",
    "marked": "^0.3.5",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-default-values": "0.0.2",
    "metalsmith-feed": "^0.2.0",
    "metalsmith-gzip": "^1.1.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-matters": "^1.2.0",
    "metalsmith-pagination": "^1.4.0",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-sitemap": "^1.0.0",
    "moment": "^2.13.0",
    "multimatch": "^2.1.0",
    "node-yaml-config": "0.0.4",
    "slug": "^0.9.1",
    "tree-model": "^1.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-react": "^6.11.1",
    "browser-sync": "^2.12.8",
    "eslint-plugin-react": "^5.2.2",
    "eslint": "^2.10.2",
    "faucet": "0.0.1",
    "font-awesome": "^4.6.1",
    "foundation-sites": "6.2.1",
    "highlight.js": "^9.4.0",
    "motion-ui": "^1.2.2",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "postcss-cli": "^2.5.2",
    "react-dom": "^15.2.1",
    "react-treebeard": "^1.1.2",
    "react": "^15.2.1",
    "script-loader": "^0.7.0",
    "tape": "^4.5.1",
    "webpack": "^1.13.1",
    "what-input": "^2.1.0"
  },
  "main": "lib/builder.js",
  "config": {
    "browser": "chromium-browser"
  },
  "scripts": {
    "pretest": "npm run yaml_lint config.yml",
    "test": "node test | faucet",
    "posttest": "npm run lint",
    "verify": "node verify | faucet",
    "verify_assets": "node verify_assets | faucet",
    "prestart": "npm run compile",
    "start": "echo 'Build all the sites together'",
    "poststart": "npm run verify",
    "dev": "NODE_ENV=development nodemon --exec 'npm run compile'",
    "precompile": "npm run test",
    "compile": "npm run build_css && npm run build_css_postcss && npm run build_js",
    "postcompile": "./bin/trim-webpack-stats webpack.stats.json > ./lib/webpack.stats.json && cp css.md5 ./lib && npm run verify_assets",
    "prebuild_js": "rm -rf ./assets/js/*",
    "build_js": "webpack --json > webpack.stats.json",
    "copy_fontawesome": "find ./node_modules/font-awesome/fonts/* -maxdepth 0 -type f -exec cp \"{}\" ./assets/fonts/ \\;",
    "prebuild_css": "ls ./assets/fonts > /dev/null || mkdir -p ./assets/fonts && npm run copy_fontawesome && rm -rf ./client/css/*",
    "build_css": "node-sass --source-map true --source-map-contents --include-path ./client/scss/ --include-path ./node_modules/foundation-sites/scss/ --include-path ./node_modules/motion-ui/src --include-path ./node_modules/font-awesome/scss --output-style compressed --output ./client/css/ ./client/scss/",
    "postbuild_css": "openssl md5 client/css/* | awk '{print $2}' | sort | openssl md5 | grep -oE '[a-zA-Z0-9]+$' > css.md5",
    "prebuild_css_postcss": "rm -rf ./assets/css/* && cp -r ./assets/fonts ./assets/css",
    "build_css_postcss": "postcss --use autoprefixer -c postcss.json -d assets/css/`cat css.md5` client/css/*.css",
    "browser_sync": "browser-sync start --server site --browser=$npm_package_config_browser",
    "lint": "eslint --ignore-pattern node_modules --ignore-pattern site/ **/*.js",
    "yaml_lint": "js-yaml -t > /dev/null"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nuxeo/doc.nuxeo.com.git"
  },
  "bugs": {
    "url": "git@github.com:nuxeo/doc.nuxeo.com.git/issues"
  },
  "homepage": "http://doc.nuxeo.com"
}
